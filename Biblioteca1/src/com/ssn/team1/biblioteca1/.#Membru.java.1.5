public abstract class Membru extends UtilizatorSimplu {

  private String adresa;
  private String cnp;

  @Override
  public String toString() {
    ArrayList<Exemplar> carti = getCartiImprumutate();
    String afisare = "";
    String newLine = System.getProperty("line.separator");
    afisare += "Utilizator :" + getNumeUtilizator() + newLine + "Numarul de carti imprumutate :" + getCartiImprumutate().size() + newLine;

    for (Exemplar e : carti) {
      String numeCarte = e.getIdUnic().substring(0, e.getIdUnic().indexOf("#"));
      afisare += "Numele cartii :" + numeCarte + newLine + "Data la care trebuie returnate :" + e.getDataEliberarii() + newLine;
    }

    return afisare;
  }

}
